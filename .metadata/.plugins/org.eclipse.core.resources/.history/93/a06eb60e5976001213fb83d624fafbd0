            protected function myADG_doubleClickHandler(event:MouseEvent):void
            {

                if(myADG.isItemOpen(myADG.selectedItem))
				{
                    myADG.expandItem(myADG.selectedItem,false);
				}
                else{
                    myADG.expandItem(myADG.selectedItem,true);}
            }

        ]]>
    </fx:Script>


